<Window x:Class="MVVM_Platform.AddSubscriptionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_Platform"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
         FontWeight="ExtraLight"
        Title="AddSubscriptionDialog" Height="590" Width="300">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="1"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Assets;component/Styles/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.Resources>
            <Style TargetType="StackPanel" >
                <Setter Property="Orientation" Value="Horizontal"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="添加订阅"/>
            <Button Content="X" Margin="200,0,0,0" Style="{StaticResource WindowControlButtonStyle}" Click="Button_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Label Content="*" Foreground="Red" Margin=" 0,-5,0,0"/>
            <Label Content="Topic" FontSize="12"/>
        </StackPanel>
        <Border BorderThickness="1" CornerRadius="2" BorderBrush="Black" Grid.Row="3" Margin="5,2,5,2">
            <TextBox   BorderBrush="Transparent"/>
        </Border>
        <StackPanel Grid.Row="5">
            <Label Content="*" Foreground="Red" Margin=" 0,-5,0,0"/>
            <Label Content="Qos" FontSize="12"/>
            <Label Content="标记" FontSize="12"  Margin=" 120,0,0,0"/>

        </StackPanel>
        <StackPanel Grid.Row="6">
            <ComboBox Width="130"/>
            <ComboBox Width="130" Margin=" 20,0,0,0"/>

        </StackPanel>
        <StackPanel Grid.Row="8">
            <Label Content="别名" FontSize="12"/>
        </StackPanel>
        <Border BorderThickness="0.5" CornerRadius="2" BorderBrush="Black" Grid.Row="9" Margin="5,2,5,2">
            <TextBox   BorderBrush="Transparent"/>
        </Border>
        <StackPanel Grid.Row="11">
            <Label Content="订阅标识符" FontSize="12"/>
            <Border BorderThickness="0.5" CornerRadius="2" BorderBrush="Black" Margin="50,2,5,2" Width="190">
                <TextBox   BorderBrush="Transparent"/>
            </Border>

        </StackPanel>
        <StackPanel Grid.Row="13">
            <Label Content="禁止本地转发" FontSize="12"/>
            <RadioButton  Margin=" 50,0,0,0" Content="true" VerticalContentAlignment="Center" FontSize="15"/>
            <RadioButton Content="false" VerticalContentAlignment="Center" FontSize="12"/>

        </StackPanel>
        <StackPanel Grid.Row="15">
            <Label Content="发布时状态保留" FontSize="12"/>
            <ComboBox Margin=" 50,0,0,0" Width="150"/>
        </StackPanel>
        <StackPanel Grid.Row="17">
            <Label Content="保留消息处理" FontSize="12"/>
            <RadioButton  Margin=" 50,0,0,0" Content="true" VerticalContentAlignment="Center" FontSize="12"/>
            <RadioButton Content="false" VerticalContentAlignment="Center" FontSize="12"/>
        </StackPanel>
        <StackPanel Grid.Row="19"  HorizontalAlignment="Right">
            <Button Content="取消" FontSize="12" Style="{StaticResource WindowControlButtonStyle}"/>
            <Button Content="确定" Foreground="LightGreen" FontSize="12" Style="{StaticResource WindowControlButtonStyle}"/>

        </StackPanel>

    </Grid>
</Window>
