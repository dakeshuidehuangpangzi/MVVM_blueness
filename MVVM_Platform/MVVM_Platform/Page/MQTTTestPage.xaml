                        </Grid.ColumnDefinitions>
                        <TextBlock Text="+" HorizontalAlignment="Left"/>
                        <TextBlock Text="&#xe720;" FontFamily="{StaticResource Iconfont}" Grid.Column="1"  HorizontalAlignment="Right"/>
                    </Grid>
                </ToggleButton>
                <Popup StaysOpen="False" IsOpen="{Binding ElementName=btnManual,Path=IsChecked}"
               AllowsTransparency="True" PlacementTarget="{Binding ElementName=btnManual}"
               Placement="Left">
                </Popup>
            </StackPanel>
            <ListView Grid.Row="1" BorderThickness="0" ItemsSource="{Binding Clients}" Name="Clientlist"/>
